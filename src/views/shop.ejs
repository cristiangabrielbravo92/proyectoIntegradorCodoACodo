<%- include('./partials/header_shop.ejs') %>
  <main>
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-md-2">
          <div class="row">
            <div class="col-12">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Buscar</label>
              <input type="text" class="form-control" placeholder="First name" aria-label="First name">
            </div>
            <div class="col-12 mt-3">
              <label for="inputState" class="form-label text-uppercase">Ordenar por</label>
              <select id="inputState" class="form-select">
                <option selected>Mayor a menor</option>
                <option>...</option>
              </select>
            </div>
            <div class="col-12 mt-3">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Precio</label>
              <div class="row align-items-end">
                <div class="col-12 d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <label for="formGroupExampleInput" class="text-uppercase me-1">Min</label>
                    <input type="text" class="form-control" placeholder="0" aria-label="First name">
                  </div>
                  <div class="d-flex align-items-center px-2">
                    -
                  </div>
                  <div class="d-flex align-items-center">
                    <label for="formGroupExampleInput" class="text-uppercase me-1">Max</label>              
                    <input type="text" class="form-control" placeholder="0" aria-label="First name">
                  </div>
                </div>
              </div>              
            </div>
            <div class="col-12 mt-3">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Filtrar</label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                NUEVOS
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                OFERTAS
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                EDICIÓN ESPECIAL
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                FAVORITOS
              </label>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-10 mb-4">
          <div class="row">
            <% items.forEach(function(item) { %>
            <div class="col-12 col-md-4">
              <div class="card border-0">
                <div class="d-flex justify-content-end p-2">
                  <button class="btn btn-primary rounded-0 text-white py-4 px-4">NUEVO</button>
                </div>
                <a class="card-item__link" href="/shop/item/<%=item.product_id %>">
                  <img src="<%= item.img_front %>" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                  <p class="card-title card-item__licence"><%= item.licence_name %></p>
                  <h4 class="card-item__name"><%= item.product_name %></h4>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item card-item__price border-0"><%= item.product_price %></li>
                  <li class="list-group-item card-item__promo">3 CUOTAS SIN INTERÉS</li>
                </ul>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </main>
  <div class="container d-flex justify-content-center">
    <nav aria-label="Page navigation example">
      <ul class="pagination pagination-lg">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  <%- include('./partials/footer.ejs') %>