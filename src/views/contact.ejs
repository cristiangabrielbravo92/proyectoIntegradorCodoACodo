<%- include('partials/headerShop') %>
    <main class="container">
        <section class="form_contacto">
            <h4 class="form_login__title text-uppercase fw-bold">Contacto</h4>
            <p class="form_login__text">Complete el formulario para contactarnos</p>
            <form class="contactForm" action="/mensajeEnviado" method="post"
                enctype="application/x-www-form-urlencoded">
                <section class="form_login__container">
                    <div class="datosContact">
                        <div class="form_login__data">
                            <label class="form_login__label">Nombre:</label>
                            <input id="Nombre" name="Nombre" class="form_login__input" type="text"
                                placeholder="Nombre" />
                        </div>
                        <div class="form_login__data">
                            <label class="form_login__label">Apellido:</label>
                            <input id="apellido" name="apellido" class="form_login__input" type="text"
                                placeholder="Apellido" />
                        </div>
                        <div class="form_login__data">
                            <label class="form_login__label">Email:</label>
                            <input id="email" name="email" class="form_login__input" type="email" placeholder="Email" />
                        </div>
                    </div>
                    <div class="form_login__data">
                        <label class="form_login__label">Ingrese su mensaje:</label>
                        <textarea id="texto" name="texto" class="form_login__input" type="text"
                            placeholder=""></textarea>
                    </div>
                    <div class="form_login__data">
                        <button class="form_contact_btn" type="submit" value="Enviar">ENVIAR</button>
                    </div>
                </section>
            </form>

        </section>
    </main>
    <%- include('./partials/footer.ejs') %>