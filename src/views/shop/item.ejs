<main>
    <div class="container mt-5">
        <section class="row align-items-center mobile-collection">
          <picture class="col-12 col-sm-6 d-block d-sm-none">
              <img src="../../img<%= item.image_front %>" alt="<%= item.product_description %>" />
          </picture>
          <article class="col-12 col-sm-6 mobile-collection order-1">
               <p class="card-title card-item__licence_item"><%= product.licence_name %></p>
               <h1 class="collection__title_item mb-3"><%= product.product_name %></h1>
               <p class="collection__text_item_item mb-3"><%= product.product_description %></p>
               <p class="collection_item_item_price"><%= product.price %></p>
               <div class="row">
                <form action="#" method="POST" enctype="application/x-www-form-urlencoded">
                  <div class="col-12 col-lg-4 d-flex">
                    <input class="form-control" type="text" name="quantity" id="quantity" placeholder="0" />
                  </div>
                  <div class="col-12 col-lg-1 d-flex flex-wrap justify-content-center">
                    <button class="btn btn-secondary rounded-0 w-100 mb-1" id="agregar">+</button>
                    <button class="btn btn-secondary rounded-0 w-100" id="quitar">-</button>
                  </div>
                  <div class="col-12 col-lg-7">
                    <button class="btn btn-primary rounded-0 py-3 collection_item_item__button" type="submit">Agregar al carrito</button>
                  </div>
                </form>
               </div>
               <a class="collection_item_item_promo">Ver métodos de pago - 3 CUOTAS SIN INTERÉS</a>
              
               
