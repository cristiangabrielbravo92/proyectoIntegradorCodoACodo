<main>
    <div class="container mt-5">
        <div class="row">
            <aside class="col-12 col-md-2">
                <div class="row">
            <div class="col-12">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Buscar</label>
              <input type="text" class="form-control" placeholder="First name" aria-label="First name">
            </div>
            <div class="col-12 mt-3">
              <label for="inputState" class="form-label text-uppercase">Ordenar por</label>
              <select id="inputState" class="form-select">
                <option selected>Mayor a menor</option>
                <option>...</option>
              </select>
            </div>
            <div class="col-12 mt-3">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Precio</label>
            </div>
            <div class="row align-items-end">
              <div class="col-12 col-md-2">
                <label for="formGroupExampleInput" class="form-label text-uppercase">Min</label>
              </div>
              <div class="col-12 col-md-4">
                <input type="text" class="form-control" placeholder="0" aria-label="First name">
              </div>
              <div class="col-12 col-md-2">
                <label for="formGroupExampleInput" class="form-label text-uppercase">Max</label>
              </div>
              <div class="col-12 col-md-4">
                <input type="text" class="form-control" placeholder="0" aria-label="First name">
              </div>
              
            </div>
            <div class="col-12 mt-3">
              <label for="formGroupExampleInput" class="form-label text-uppercase">Filtrar</label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                NUEVOS
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                OFERTAS
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                EDICIÓN ESPECIAL
              </label>
            </div>
            <div class="col-12 form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck1">
              <label class="form-check-label" for="gridCheck1">
                FAVORITOS
              </label>
            </div>
                </div>


            </aside>
            <div class="col-12 col-md-10 mb-4">
                <div class="row">
            <% items.forEach( item => { %>
                <!-- acá empieza una card -->
                <a href="/shop/item/<%= item.product_id %>" >                  
                  <div class="col-12 col-md-4">
                      <div class="card border-0">
                          <div class="d-flex justify-content-end p-2">
                            <button class="btn btn-primary rounded-0 text-white py-4 px-4">NUEVO</button>
                          </div>
                          <img src="../../img<%= item.image_front%>" class="card-img-top" alt="...">
                          <div class="card-body">
                            <p class="card-title card-item__licence"><%= item.licence_name %></p>
                            <h4 class="card-item__name"><%= item.product_name %></h4>
                          </div>
                          <ul class="list-group list-group-flush">
                            <li class="list-group-item card-item__price border-0"><%= item.price %></li>
                            <li class="list-group-item card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</li>
                          </ul>
                      </div>
                  
                  </div>
                </a>
              <!-- acá termina la card -->
            <% }); %>
            
            
          
                </div>
            </div>
        </div>
    </div>
</main>

<!-------------->
<!-- Fin Main -->
<!-------------->
  
