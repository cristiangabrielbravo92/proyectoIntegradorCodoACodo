<main class="container">
    <section class="searchBar">
        <label class="searchBar__label" for="search__query">
            <img class="searchBar__iconoLupa" src="../../img/icons/search_icon.svg" alt="search_icon"></label>
        <input class="searchBar__input" type="text" name="search__query" id="search__query" placeholder="Código, nombre o categoría">
    </section>
    <section class="productTable">
        <div class="productTable__title">
            <h2>LISTADO DE PRODUCTOS</h2>
            <span>AGREGAR<a href="/admin/create"><iconify-icon icon="bxs:plus-square"></iconify-icon></a></span>
        </div>
        <div class="productTable__header">
            <h3>ID</h3>
            <h3>Código</h3>
            <h3>Nombre del Producto</h3>
            <h3>Categoría</h3>
        </div>
        <% products.forEach(item => { %>
            <article class="productTable__row">
                <p><%= product.product_id %></p>
                <p><%= product.sku %></p>
                <p><%= product.product_name %></p>
                <p><%= product.cagetory_name %></p>
                <a href="/admin/edit/<%= product.product_id %>"><img src="../../../public/img/icons/edit_pencil.svg" alt="Icono de editar"></a>
                <form action="/admin/delete/<%= product.product_id %>?_method=DELETE" method="POST">
                    <button class="admin-table__btn-delete" type="submit">
                        <img src="../../../public/img/icons/delete_trash.svg" alt="Icono de eliminar">
                    </button>
                </form>
                <!-- <a href=""><img src="../../img/icons/delete_trash.svg" alt="Icono de eliminar"></a> -->
            </article>
        <% }); %>
    </section>
</main>

