<section class="slider container glide">
    <h2 class="slider__title">Últimos Lanzamientos-</h2>
    <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
            <% products.forEach(function(item) { %>
            <li class="slider__item glide__slide">
            <article class="card-item">
                <a class="card-item__link" href="">
                    <picture class="card-item__cover">
                        <span class="card-item__tag">Nuevo</span>
                        <!-- esta imagen esta visible hasta que se haga hover -->
                        <img  class="card-item__img--front" src="/img<%= item.image_front %>" alt="<%= item.description  %>">
                         <!-- esta imagen está oculta hasta que se haga hover -->
                        <img  class="card-item__img--back" src="/img<%= item.image_back %>" alt="<%= item.description  %>">
                        
                    </picture>
                    <div class="card-item__content">
                        <p class="card-item__license"><%= item.licence_name %></p>
                        <h4 class="card-item__name"><%= item.product_name %></h4>
                        <p class="card-item__price">$ <%= item.price %></p>
                        <p class="card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                    </div>
                </a>
            </article>
